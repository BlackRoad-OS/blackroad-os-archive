# BlackRoad OS Platform Integrations - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# CLOUD PLATFORMS
# =============================================================================

# Railway (https://railway.app)
RAILWAY_TOKEN=

# Vercel (https://vercel.com)
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Cloudflare (https://cloudflare.com)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_ZONE_ID=

# DigitalOcean (https://digitalocean.com)
DIGITALOCEAN_TOKEN=
DO_VPC_UUID=
DO_SSH_KEY_ID=

# =============================================================================
# GITHUB
# =============================================================================

# GitHub Personal Access Token
GITHUB_TOKEN=
GITHUB_OWNER=BlackRoad-OS
GITHUB_REPO=blackroad-os-archive
GITHUB_ORGS=BlackRoad-OS

# GitHub App (optional)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================

# Clerk (https://clerk.com)
CLERK_PUBLISHABLE_KEY=pk_test_
CLERK_SECRET_KEY=sk_test_
CLERK_WEBHOOK_SECRET=whsec_

# OAuth Providers (configured in Clerk dashboard)
GOOGLE_CLIENT_ID=
GITHUB_OAUTH_CLIENT_ID=

# =============================================================================
# PAYMENTS (Stripe)
# =============================================================================

# Stripe (https://stripe.com)
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# Price IDs (create in Stripe dashboard)
STRIPE_PRICE_PRO_MONTHLY=price_
STRIPE_PRICE_PRO_YEARLY=price_
STRIPE_PRICE_TEAM_MONTHLY=price_
STRIPE_PRICE_TEAM_YEARLY=price_

# =============================================================================
# PRODUCTIVITY TOOLS
# =============================================================================

# Asana (https://asana.com)
ASANA_API_TOKEN=
ASANA_WORKSPACE_GID=

# Notion (https://notion.so)
NOTION_API_KEY=secret_
NOTION_DATABASE_ID=

# Slack (https://slack.com)
SLACK_BOT_TOKEN=xoxb-
SLACK_SIGNING_SECRET=
SLACK_APP_TOKEN=xapp-

# =============================================================================
# AI/ML SERVICES
# =============================================================================

# Hugging Face (https://huggingface.co)
HF_TOKEN=hf_
HF_HOME=~/.cache/huggingface
TRANSFORMERS_CACHE=~/.cache/huggingface/hub

# OpenAI (https://openai.com)
OPENAI_API_KEY=sk-

# Anthropic (https://anthropic.com)
ANTHROPIC_API_KEY=sk-ant-

# =============================================================================
# TUNNELING & NETWORKING
# =============================================================================

# Cloudflare Tunnel
TUNNEL_TOKEN=

# ngrok (https://ngrok.com)
NGROK_AUTHTOKEN=

# Tailscale (https://tailscale.com)
TAILSCALE_AUTHKEY=tskey-

# WireGuard
WG_SERVER_PRIVATE_KEY=
WG_CLIENT_PRIVATE_KEY=

# =============================================================================
# RASPBERRY PI / IOT
# =============================================================================

# SSH Configuration
PI_SSH_USER=pi
PI_SSH_KEY_PATH=~/.ssh/blackroad_pi

# Device IPs (update with your IPs)
PI_HUB_IP=192.168.1.100
PI_DEV_IP=192.168.1.101

# =============================================================================
# DATABASE & CACHE
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/blackroad
POSTGRES_USER=blackroad
POSTGRES_PASSWORD=
POSTGRES_DB=blackroad

# Redis
REDIS_URL=redis://localhost:6379

# =============================================================================
# APPLICATION
# =============================================================================

# Environment
NODE_ENV=development
PORT=8080

# API URLs
API_URL=http://localhost:8080
ARCHIVE_URL=http://localhost:4321
WEB_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=

# Session Secret
SESSION_SECRET=

# Admin IPs (for firewall rules)
ADMIN_IP=

# =============================================================================
# MONITORING
# =============================================================================

# Sentry (https://sentry.io)
SENTRY_DSN=

# Prometheus
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_ADMIN_PASSWORD=
